generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

generator zod {
  provider = "zod-prisma-types"
  output   = "../app/generated/zod"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:password@localhost:3306/gerenciar-livros"
}

// =====
// source: https://authjs.dev/getting-started/adapters/prisma
model User {
  id            String          @id @default(cuid())
  name          String?
  username      String?         @unique
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  // Optional for WebAuthn support
  Authenticator Authenticator[]

  // for user/password authentication, not used for social logins
  hashedPassword String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String  @unique
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? @db.Text
  access_token             String? @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? @db.Text
  session_state            String?
  refresh_token_expires_in Int?
  user                     User?   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

// =====

model Livro {
  id                Int    @id @default(autoincrement())
  titulo            String /// @zod.string.min(3, { message: "min length error" })
  autor             String
  // autor             String @db.VarChar(100)
  anoPublicacao     Int // MySQL's YEAR (@db.Year) only supports range of 1901 to 2155
  genero            String
  estoqueQuantidade Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
